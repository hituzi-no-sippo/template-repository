{
  "extends": [
    ":ignoreModulesAndTests",
    "group:monorepos",
    "group:recommended",
    "workarounds:all",
    "local>hituzi-no-sippo/tp//.renovate/aqua",
    "local>hituzi-no-sippo/tp//.renovate/lefthook",
    "local>hituzi-no-sippo/tp//.renovate/node",
    "local>hituzi-no-sippo/tp//.renovate/npm",
    "local>hituzi-no-sippo/tp//.renovate/ruby",
    "local>hituzi-no-sippo/tp//.renovate/gem",
    "local>hituzi-no-sippo/tp//.renovate/github_actions"
  ],
  "configMigration": true,
  "patch": {
    "automerge": true
  },
  "automergeStrategy": "merge-commit",
  "automergeType": "pr",
  "platformAutomerge": true,
  "rangeStrategy": "auto",
  "semanticCommits": "enabled",
  "semanticCommitType": "build",
  "dependencyDashboard": true,
  "dependencyDashboardApproval": false,
  "dependencyDashboardAutoclose": true,
  "dependencyDashboardLabels": [
    "renovate",
    "dependencies",
    "automated"
  ],
  "labels": [
    "renovate",
    "dependencies",
    "automated"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        ".renovaterc.json",
        ".renovate/*.json"
      ],
      "matchDatasources": [
        "github-releases"
      ],
      "minor": {
        "automerge": true
      },
      "addLabels": [
        "renovate-config"
      ],
      "semanticCommitScope": "renovate"
    }
  ]
}

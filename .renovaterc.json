{
  "extends": [
    ":ignoreModulesAndTests",
    ":semanticPrefixFixDepsChoreOthers",
    "group:monorepos",
    "group:recommended",
    "workarounds:all",
    "github>aquaproj/aqua-renovate-config#1.6.0",
    "github>aquaproj/aqua-renovate-config:file#1.6.0(^.aqua/.*\\.yml$)"
  ],
  "patch": {
    "automerge": true
  },
  "platformAutomerge": true,
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "auto",
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "dependencyDashboardLabels": [
    "dependencies",
    "automated issue"
  ],
  "semanticCommits": "enabled",
  "configMigration": true,
  "packageRules": [
    {
      "matchFileNames": [
        ".aqua.yml",
        ".aqua/*.yml"
      ],
      "addLabels": [
        "aqua"
      ],
      "groupName": "aqua package",
      "minor": {
        "automerge": true
      }
    },
    {
      "matchPackagePatterns": [
        "aquaproj/aqua"
      ],
      "addLabels": [
        "aqua"
      ],
      "minor": {
        "automerge": true
      }
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "github-actions"
      ]
    }
  ]
}

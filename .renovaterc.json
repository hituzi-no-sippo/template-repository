{
  "extends": [
    ":ignoreModulesAndTests",
    "group:monorepos",
    "group:recommended",
    "workarounds:all",
    "local>hituzi-no-sippo/template-repository//.renovate/aqua",
    "local>hituzi-no-sippo/template-repository//.renovate/lefthook",
    "local>hituzi-no-sippo/template-repository//.renovate/node",
    "local>hituzi-no-sippo/template-repository//.renovate/npm",
    "local>hituzi-no-sippo/template-repository//.renovate/github_actions",
    "local>hituzi-no-sippo/template-repository//.renovate/renovate"
  ],
  "configMigration": true,
  "automergeStrategy": "merge-commit",
  "automergeType": "pr",
  "platformAutomerge": true,
  "internalChecksFilter": "strict",
  "minimumReleaseAge": "1 week",
  "major": {
    "automerge": false,
    "minimumReleaseAge": "2 weeks"
  },
  "minor": {
    "automerge": false
  },
  "patch": {
    "automerge": true,
    "minimumReleaseAge": "3 days"
  },
  "rangeStrategy": "auto",
  "schedule": "at any time",
  "automergeSchedule": "at any time",
  "prConcurrentLimit": 10,
  "prHourlyLimit": 2,
  "semanticCommits": "enabled",
  "semanticCommitType": "build",
  "dependencyDashboard": true,
  "dependencyDashboardApproval": false,
  "dependencyDashboardAutoclose": true,
  "dependencyDashboardLabels": [
    "renovate",
    "dependencies",
    "automated"
  ],
  "labels": [
    "renovate",
    "dependencies",
    "automated"
  ]
}

{
  "extends": [
    ":ignoreModulesAndTests",
    "group:monorepos",
    "group:recommended",
    "workarounds:all",
    "github>aquaproj/aqua-renovate-config#1.10.0",
    "github>aquaproj/aqua-renovate-config:file#1.10.0(^\\.aqua/imports/.*\\.yml$)"
  ],
  "patch": {
    "automerge": true
  },
  "platformAutomerge": true,
  "labels": [
    "renovate",
    "dependencies"
  ],
  "rangeStrategy": "auto",
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "dependencyDashboardLabels": [
    "dependencies",
    "automated issue"
  ],
  "semanticCommits": "enabled",
  "semanticCommitType": "build",
  "configMigration": true,
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "github-actions"
      ],
      "semanticCommitScope": "github-actions"
    },
    {
      "matchFileNames": [
        ".github/workflows/*.yml",
        ".github/actions/**/*.yml"
      ],
      "addLabels": [
        "github-actions"
      ],
      "semanticCommitScope": "github-actions"
    },
    {
      "matchFileNames": [
        ".aqua/aqua.yml",
        ".aqua/imports/*.yml"
      ],
      "addLabels": [
        "aqua"
      ],
      "minor": {
        "automerge": true
      },
      "semanticCommitScope": "aqua"
    },
    {
      "matchFileNames": [
        ".aqua/imports/github.yml"
      ],
      "addLabels": [
        "github"
      ]
    },
    {
      "matchPackagePatterns": [
        "aquaproj/aqua"
      ],
      "addLabels": [
        "aqua"
      ],
      "minor": {
        "automerge": true
      },
      "semanticCommitScope": "aqua"
    }
  ]
}

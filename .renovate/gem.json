{
  "packageRules": [
    {
      "matchDatasources": [
        "rubygems"
      ],
      "addLabels": [
        "gem"
      ],
      "semanticCommitScope": "gem"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "packageNameTemplate": "bundler",
      "depNameTemplate": "bundler",
      "datasourceTemplate": "rubygems",
      "depTypeTemplate": "development",
      "fileMatch": [
        "^Gemfile\\.lock$"
      ],
      "matchStrings": [
        "BUNDLED WITH\\n\\s+(?<currentValue>[\\w+\\.\\-]*)"
      ]
    }
  ]
}

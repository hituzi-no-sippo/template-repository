{
  "packageRules": [
    {
      "matchPackagePrefixes": [
        "renovate"
      ],
      "minor": {
        "automerge": true
      }
    },
    {
      "matchPackagePatterns": [
        "renovate.+config"
      ],
      "addLabels": [
        "renovate-config"
      ],
      "semanticCommitScope": "renovate"
    },
    {
      "matchDatasources": [
        "npm"
      ],
      "matchPackageNames": [
        "renovate"
      ],
      "addLabels": [
        "renovate-version"
      ]
    }
  ]
}
